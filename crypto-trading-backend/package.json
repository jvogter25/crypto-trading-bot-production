{
  "name": "crypto-trading-backend",
  "version": "1.0.0",
  "description": "Backend for cryptocurrency trading application",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:aws": "nest build && cp package.json dist/ && cp -r node_modules dist/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "dev": "nest start --watch",
    "dashboard:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:aws": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:setup": "ts-node src/scripts/run-database-setup.ts",
    "db:test": "ts-node src/scripts/test-database.ts",
    "setup-altcoin-db": "psql $DATABASE_URL -f src/database/altcoin-trading-schema.sql",
    "test-altcoin-strategy": "ts-node src/scripts/test-altcoin-strategy.ts",
    "setup-volatile-db": "psql $DATABASE_URL -f src/database/volatile-asset-trading-schema.sql",
    "test:volatile-trader": "ts-node src/scripts/test-volatile-trader.ts",
    "production:volatile-trader": "ts-node src/scripts/production-volatile-trader.ts",
    "setup-risk-db": "ts-node src/services/risk-management/setup-risk-database.ts",
    "test:risk-manager": "ts-node src/services/risk-management/test-risk-manager.ts",
    "production:risk-dashboard": "ts-node src/services/risk-management/production-risk-dashboard.ts",
    "test:kraken-integration": "ts-node src/services/kraken-integration/test-kraken-integration.ts",
    "kraken:validate": "ts-node src/services/kraken-integration/validate-kraken-connection.ts",
    "kraken:demo": "ts-node src/services/kraken-integration/demo-kraken-integration.ts",
    "market-data:start": "ts-node src/services/kraken-integration/kraken-market-data-service.ts",
    "sheets:setup": "ts-node src/services/external-logging/setup-google-sheets.ts",
    "sheets:demo": "ts-node src/services/external-logging/demo-google-sheets-logging.ts",
    "sheets:summary": "ts-node src/services/external-logging/google-sheets-summary.ts",
    "test:sheets-integration": "ts-node src/services/external-logging/test-google-sheets-integration.ts",
    "audit:validate": "ts-node src/services/external-logging/validate-audit-trail.ts",
    "audit:start": "ts-node src/services/external-logging/start-audit-service.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@supabase/supabase-js": "^2.38.4",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.6.2",
    "ccxt": "^4.1.64",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^9.15.1",
    "google-spreadsheet": "^4.1.4",
    "node-cron": "^3.0.3",
    "pg": "^8.11.0",
    "python-shell": "^5.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.17",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
